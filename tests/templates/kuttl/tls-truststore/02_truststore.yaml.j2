# $NAMESPACE will be replaced with the namespace of the test case.
---
apiVersion: secrets.stackable.tech/v1alpha1
kind: TrustStore
metadata:
  name: truststore-pem
spec:
  secretClassName: tls-$NAMESPACE
  format: tls-pem
  targetKind: {{ test_scenario['values']['truststore-target-kind'] }}
---
apiVersion: secrets.stackable.tech/v1alpha1
kind: TrustStore
metadata:
  name: truststore-pkcs12
spec:
  secretClassName: tls-$NAMESPACE
  format: tls-pkcs12
  targetKind: {{ test_scenario['values']['truststore-target-kind'] }}
---
apiVersion: secrets.stackable.tech/v1alpha1
kind: TrustStore
metadata:
  name: truststore-k8ssearch
spec:
  secretClassName: k8ssearch-$NAMESPACE
  targetKind: {{ test_scenario['values']['truststore-target-kind'] }}
